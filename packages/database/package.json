{
    "name": "@solar-network/database",
    "version": "4.5.0",
    "description": "Database Interface for Solar Core",
    "license": "CC-BY-ND-4.0",
    "contributors": [
        "alessiodf <gym@solar.org>",
        "cactus1549 <cactus1549@solar.org>",
        "ARK Ecosystem <info@ark.io>"
    ],
    "files": [
        "dist"
    ],
    "main": "dist/index",
    "types": "dist/index",
    "scripts": {
        "build": "pnpm clean && pnpm compile",
        "build:watch": "pnpm clean && pnpm compile -w",
        "clean": "rimraf dist",
        "compile": "node ../../node_modules/typescript/bin/tsc",
        "postinstall": "cd node_modules/better-sqlite3 && grep STAT4 deps/defines.gypi ; if [ $? -eq 0 ]; then sed -i.bak -e 's/STAT4/STAT1/g' -- deps/defines.gypi && rm deps/defines.gypi.bak && pnpm build-release; fi"
    },
    "dependencies": {
        "@solar-network/crypto": "workspace:*",
        "@solar-network/kernel": "workspace:*",
        "better-sqlite3": "8.0.1",
        "bs58": "5.0.0",
        "dayjs": "1.10.7"
    },
    "devDependencies": {
        "@types/better-sqlite3": "5.4.3"
    }
}
