{
    "name": "@solar-network/core-webhooks",
    "version": "3.1.1",
    "description": "Webhooks for Solar Core",
    "license": "CC-BY-ND-4.0",
    "contributors": [
        "alessiodf <gym@solar.org>",
        "cactus1549 <cactus1549@solar.org>",
        "ARK Ecosystem <info@ark.io>"
    ],
    "files": [
        "dist"
    ],
    "main": "dist/index",
    "scripts": {
        "build": "yarn clean && yarn compile && cp -r ./src/www/ ./dist/",
        "build:watch": "yarn clean && yarn compile -w",
        "build:docs": "../../node_modules/typedoc/bin/typedoc --out docs src",
        "clean": "rimraf dist",
        "compile": "node ../../node_modules/typescript/bin/tsc",
        "prepublishOnly": "yarn build",
        "pretest": "bash ../../scripts/pre-test.sh"
    },
    "dependencies": {
        "@solar-network/core-kernel": "3.1.1",
        "@solar-network/crypto": "3.1.1",
        "@hapi/boom": "9.1.4",
        "@hapi/hapi": "20.2.1",
        "@hapi/inert": "6.0.5",
        "fs-extra": "8.1.0",
        "joi": "17.6.0",
        "lowdb": "1.0.0",
        "uuid": "8.3.2"
    },
    "devDependencies": {
        "@types/fs-extra": "8.1.2",
        "@types/hapi__boom": "7.4.1",
        "@types/hapi__joi": "17.1.7",
        "@types/uuid": "8.3.1"
    },
    "publishConfig": {
        "access": "public"
    }
}
